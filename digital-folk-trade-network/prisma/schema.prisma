generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  name         String
  email        String @unique
  passwordHash String
 JWT
  role         Role     @default(USER)
  refreshTokenVersion Int @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  role         Role   @default(USER)
main

  // Reverse relations
  artifacts Artifact[] @relation("UserArtifacts")
  orders    Order[]
  reviews   Review[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  artifacts Artifact[]
}

model Artifact {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Decimal
  stock       Int
  imageUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sellerId   Int
  categoryId Int

  seller     User        @relation("UserArtifacts", fields: [sellerId], references: [id], onDelete: Cascade)
  category   Category    @relation(fields: [categoryId], references: [id])
  orderItems OrderItem[]
  reviews    Review[]

  @@index([categoryId])
  @@index([sellerId, createdAt])
}

model Order {
  id          Int         @id @default(autoincrement())
  totalAmount Decimal
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  userId Int
  user   User        @relation(fields: [userId], references: [id], onDelete: Restrict)
  items  OrderItem[]

  @@index([status])
  @@index([createdAt])
  @@index([userId, status])
}

model OrderItem {
  id       Int     @id @default(autoincrement())
  quantity Int
  price    Decimal

  orderId    Int
  artifactId Int

  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  artifact Artifact @relation(fields: [artifactId], references: [id])
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId     Int
  artifactId Int

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  artifact Artifact @relation(fields: [artifactId], references: [id], onDelete: Cascade)

  @@unique([userId, artifactId])
  @@index([artifactId])
}

model File {
  id        Int      @id @default(autoincrement())
  name      String
  url       String
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ARTIST
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}
